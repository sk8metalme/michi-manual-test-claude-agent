{
  "name": "@sk8metal/michi-cli",
  "version": "0.0.9",
  "description": "Managed Intelligent Comprehensive Hub for Integration - AI-driven development workflow automation",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sk8metalme/michi.git"
  },
  "homepage": "https://github.com/sk8metalme/michi#readme",
  "bugs": {
    "url": "https://github.com/sk8metalme/michi/issues"
  },
  "keywords": [
    "ai",
    "development",
    "workflow",
    "automation",
    "confluence",
    "jira",
    "atlassian",
    "spec-driven-development",
    "cc-sdd",
    "cursor",
    "github"
  ],
  "bin": {
    "michi": "dist/src/cli.js"
  },
  "files": [
    "dist",
    "scripts",
    "templates",
    "docs",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "env.example",
    "mcp.json.example"
  ],
  "scripts": {
    "build": "tsc && node scripts/copy-static-assets.js",
    "postbuild": "node scripts/set-permissions.js",
    "prepare": "husky",
    "setup:interactive": "tsx scripts/setup-interactive.ts",
    "michi:setup:cursor": "tsx src/cli.ts setup-existing --cursor",
    "michi:setup:claude": "tsx src/cli.ts setup-existing --claude",
    "michi:setup:claude-agent": "tsx src/cli.ts setup-existing --claude-agent",
    "create-project": "tsx scripts/create-project.ts",
    "setup-existing": "tsx scripts/setup-existing-project.ts",
    "confluence:sync": "tsx scripts/confluence-sync.ts",
    "jira:sync": "tsx scripts/jira-sync.ts",
    "github:create-pr": "tsx scripts/pr-automation.ts",
    "project:list": "tsx scripts/list-projects.ts",
    "project:dashboard": "tsx scripts/resource-dashboard.ts",
    "multi-estimate": "tsx scripts/multi-project-estimate.ts",
    "markdown:convert": "tsx scripts/markdown-to-confluence.ts",
    "michi": "tsx src/cli.ts",
    "workflow:run": "tsx scripts/workflow-orchestrator.ts",
    "validate:phase": "tsx scripts/validate-phase.ts",
    "phase:run": "tsx scripts/phase-runner.ts",
    "preflight": "tsx scripts/pre-flight-check.ts",
    "pre-publish": "bash scripts/pre-publish-check.sh",
    "test:package": "bash scripts/test-npm-package.sh",
    "config:interactive": "tsx scripts/config-interactive.ts",
    "config:validate": "tsx scripts/utils/config-validator.ts",
    "test:interactive": "tsx scripts/test-interactive.ts",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage",
    "test:integration:setup": "vitest --run src/__tests__/integration/setup",
    "test:coverage:setup": "vitest --run --coverage src/__tests__/integration/setup",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "axios": "^1.13.1",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "exceljs": "^4.4.0",
    "googleapis": "^166.0.0",
    "inquirer": "^9.2.12",
    "jira-client": "^8.2.2",
    "markdown-it": "^14.0.0",
    "turndown": "^7.1.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/inquirer": "^9.0.7",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.10.1",
    "@types/turndown": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.8",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
